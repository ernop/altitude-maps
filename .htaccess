# Prevent Apache from double-compressing .json.gz files
# These files are already gzipped - serve them as-is

<FilesMatch "\.(gz)$">
    # Disable mod_deflate compression
    SetEnv no-gzip 1
    RemoveOutputFilter DEFLATE
</FilesMatch>

# Set MIME type for .json.gz files
<IfModule mod_mime.c>
    AddType application/json .json.gz
    # Don't add content-encoding header
    RemoveEncoding .gz
</IfModule>

# Remove content-encoding header if Apache adds it anyway
<IfModule mod_headers.c>
    <FilesMatch "\.(gz)$">
        Header unset Content-Encoding
    </FilesMatch>
</IfModule>
